{
  "manifest_version": 2,

  "name": "Clipboard",
  "description": "Copy and paste multiple times using the Clipboard",
  "version": "1.0",

  "browser_action": {
    "default_popup": "Clipboard.html"
  },

  "permissions": [ 
    "<all_urls>",
    "tabs", 
    "activeTab", 
    "clipboardRead", 
    "clipboardWrite"
  ],

  "background": {
    "scripts": [
      "CommandTypes.js",
      "Commands/CopyCommand.js",
      "Commands/PasteCommand.js",
      "InteractionManager.js" 
    ]
  },

  "commands": {
    "copy": {
      "suggested_key": {
        "default": "Ctrl+Shift+X",
        "mac": "Ctrl+Shift+X"
      },
      "description": "Copy highlited fields into the clipboard"
    },
    "paste": {
      "suggested_key": {
        "default": "Ctrl+Shift+Space",
        "mac": "Ctrl+Shift+Space"
      },
      "description": "Paste selected field in clipboard"
    },
    "remove": {
      "suggested_key": {
        "default": "Ctrl+Z",
        "mac": "Ctrl+Z"
      },
      "description": "Clear clipboard data"
    },
    "reset": {
      "suggested_key": {
        "default": "Ctrl+Shift+Z",
        "mac": "Ctrl+Shift+Z"
      },
      "description": "Clear clipboard data"
    }
  }
}
